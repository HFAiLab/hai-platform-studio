{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "exactOptionalPropertyTypes": false,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2020"
  },
  "include": ["./src/**/*.ts", "./src/**/*.vue", "vite.config.ts"],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
